{
  "name": "modern-slavery-data-service",
  "version": "0.1.0",
  "description": "Provides a service layer to talk to a database to store and manage data for the main modern slavery app",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all start-server",
    "dev": "DEBUG=* npm-run-all start-server",
    "start-server": "node server.js",
    "test": "npm-run-all test:unit lint",
    "test:unit": "_mocha",
    "test:coverage": "nyc npm run test:unit ",
    "lint": "eslint .",
    "migration:create": "knex  --knexfile ./models/knex/knexfile.js migrate:make data-service-migration",
    "migration": "knex --knexfile ./models/knex/knexfile.js migrate:latest --debug",
    "migration:rollback": "knex --knexfile ./models/knex/knexfile.js migrate:rollback --debug",
    "setup-migration": "npm-run-all migration:rollback migration"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UKHomeOffice/modern-slavery-data-service.git"
  },
  "keywords": [
    "modern slavery",
    "report modern slavery",
    "report modern slavery data service",
    "hof",
    "home office"
  ],
  "author": "UK Home Office",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UKHomeOffice/modern-slavery-data-service/issues"
  },
  "homepage": "https://github.com/UKHomeOffice/modern-slavery-data-service#readme",
  "dependencies": {
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "knex": "^0.20.10",
    "npm-run-all": "^4.1.5",
    "pg": "^7.18.1",
    "restify": "^8.5.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-shallow-deep-equal": "^1.4.6",
    "eslint": "^6.7.1",
    "eslint-config-homeoffice": "^2.2.0",
    "eslint-plugin-mocha": "^6.2.2",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "util": "^0.12.1"
  }
}
